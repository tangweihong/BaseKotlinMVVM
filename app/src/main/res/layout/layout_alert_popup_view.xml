<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:gravity="center"
    android:background="@drawable/ic_alert_bg">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="16sp"
        android:textColor="@color/txt_1a"
        android:textStyle="bold"
        android:text="安全提示"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/txt_66"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_0.5"
        android:background="@color/line_ee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/txt_66"
            android:text="暂不设置"/>
        <View
            android:id="@+id/divider_line"
            android:layout_width="@dimen/line_0.5"
            android:layout_height="match_parent"
            android:background="@color/line_ee"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/app_yellow"
            android:text="前往设置"/>
    </LinearLayout>
</LinearLayout>