<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/font_yellow_color</item>
        <item name="colorPrimaryDark">@color/font_yellow_color</item>
        <item name="colorAccent">@color/font_yellow_color</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <!--解决英文大写-->
        <item name="textAllCaps">false</item>
    </style>
    <!--设置toolbar 间距-->
    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="TabWidget" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="TabWidget15" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>

    <style name="Toolbar_TextAppearance">
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--欢迎界面主题-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <!--        <item name="android:windowBackground">@drawable/bg_splash</item>-->
    </style>

    <style name="Dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="Dialog.Transparent" parent="Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--分割线-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5px</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_text_color</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>
    <!--Button 圆角-->
    <style name="Button.Rectangle">
        <item name="android:background">@drawable/selector_rectangle_button_bg</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="Button.Rectangle12">
        <item name="android:background">@drawable/selector_rectangle_button_bg12</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!--    <style name="Button.Round">-->
    <!--        <item name="android:background">@drawable/selector_rectangle_button_bg</item>-->
    <!--    </style>-->

    <!--基本条目-->
    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_item_click</item>
    </style>
    <!--EditText 基本条目-->
    <!--登录注册暗色调-->
    <style name="ItemEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/font_text_color</item>
        <item name="android:textColorHint">#FF94969A</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    <!--其他亮色调-->
    <style name="ItemLightEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/font_text_color</item>
        <item name="android:textColorHint">#FFA3A2B4</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>
    <!--EditText 密码-->
    <style name="ItemEditText.PassWord">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLines">1</item>
        <item name="android:digits">
            0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ
        </item>
    </style>
    <style name="ItemLightEditText.PassWord">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLines">1</item>
        <item name="android:digits">
            0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ
        </item>
    </style>
    <!--EditText 数字-->
    <style name="ItemEditText.Number">
        <item name="android:inputType">number</item>
        <item name="android:digits">1234567890</item>
    </style>
    <style name="ItemLightEditText.Number">
        <item name="android:inputType">number</item>
        <item name="android:digits">1234567890</item>
    </style>
    <!-- EditText 數字和字母-->
    <style name="ItemEditText.NumberAndLetter">
        <item name="android:inputType">text</item>
        <item name="android:digits">0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ
        </item>
    </style>
    <style name="ItemLightEditText.NumberAndLetter">
        <item name="android:inputType">text</item>
        <item name="android:digits">0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ
        </item>
    </style>
    <!--EditText 金额-->
    <style name="ItemEditText.Money">
        <item name="android:inputType">numberDecimal</item>
    </style>
    <style name="ItemLightEditText.Money">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <!--动画属性-->
    <!-- dialog的动画 底部弹出弹入-->
    <style name="dialog_animation_bottom_in_out">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>
    <!-- dialog的动画 左边弹出弹入-->
    <style name="dialog_animation_bottom_in_left">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_left</item>
    </style>
    <!-- dialog的动画 右边弹出弹入-->
    <style name="dialog_animation_bottom_in_right">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <!-- 缩放动画 -->
    <style name="ScaleAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/window_scale_in</item>
        <item name="android:windowExitAnimation">@anim/window_scale_out</item>
    </style>

    <!-- ios 动画 -->
    <style name="IOSAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/window_ios_in</item>
        <item name="android:windowExitAnimation">@anim/window_ios_out</item>
    </style>

