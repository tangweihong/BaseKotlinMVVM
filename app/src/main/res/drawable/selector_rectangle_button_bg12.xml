<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="#FFE01473" android:startColor="#FF5503B1" android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff4b4741" />
            <gradient android:angle="0" android:endColor="#FFE01473" android:startColor="#FF5503B1" android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#FF9898B0" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="#E01473" android:startColor="#5503B1" android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>